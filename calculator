JAVA SCRIPT:
const display = document.getElementById('display');
const buttons = Array.from(document.getElementsByClassName('button'));

let displayValue = '0';
let pendingValue = null;
let operator = null;

buttons.forEach(button => {
    button.addEventListener('click', (e) => {
        const value = e.target.innerText;

        if (value === 'C') {
            displayValue = '0';
            pendingValue = null;
            operator = null;
        } else if (value === '=') {
            if (pendingValue !== null && operator !== null) {
                displayValue = operate(pendingValue, operator, parseFloat(displayValue)).toString();
                pendingValue = null;
                operator = null;
            }
        } else if (['+', '-', '*', '/'].includes(value)) {
            if (pendingValue === null) {
                pendingValue = parseFloat(displayValue);
            } else if (operator !== null) {
                pendingValue = operate(pendingValue, operator, parseFloat(displayValue));
            }
            operator = value;
            displayValue = '0';
        } else {
            if (displayValue === '0') {
                displayValue = value;
            } else {
                displayValue += value;
            }
        }
        updateDisplay();
    });
});

function operate(a, operator, b) {
    switch (operator) {
        case '+': return a + b;
        case '-': return a - b;
        case '*': return a * b;
        case '/': return a / b;
    }
}

function updateDisplay() {
    display.innerText = displayValue;
}
